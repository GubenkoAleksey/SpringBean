<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

	<context:property-placeholder location="classpath:sport.properties"/>

	<context:component-scan
		base-package="academy.mate.ClassWorkSpring3" />

	<bean id="myCoach" class="academy.mate.springdemo.TrackCoach">
		<constructor-arg index="0" ref="myFortuneService" />
	</bean>
	<bean id="myFortuneService"
		class="academy.mate.springdemo.HappyFortuneService">
	</bean>
	<bean id="myCricketCoach"
		class="academy.mate.springdemo.CricketCoach">
		<property name="fortuneService" ref="myFortuneService" />
		<!--<property name="emailAddress" value="coach@gmail.com" />
				<property name="team" value="Lions" />
				  -->
		<property name="emailAddress" value="${foo.email}" />
		<property name="team" value="${foo.team}" />


	</bean>
</beans>
